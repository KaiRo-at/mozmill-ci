{
    "pulse": {
        "applabel": "test@example.org|my_identifier",
        "platforms": [
            "linux",
            "linux64",
            "macosx",
            "macosx64",
            "win32",
            "win64"
        ],
        "products": [
            "firefox"
        ],
        "trees": [
            "mozilla-central",
            "mozilla-aurora"
        ],
    },
    "jenkins": {
        "url": "http://localhost:8080",
        "username": "mozilla",
        "password": "test1234"
    },
    "testrun": {
        "jenkins_parameter_map": {
            "default": {
                "APPLICATION": {
                    "key": "product"
                },
                "BRANCH": {
                    "key": "tree"
                },
                "BUILD_ID": {
                    "key": "buildid"
                },
                "BUILD_TYPE": {
                    "value": "daily"
                },
                "LOCALE": {
                    "key": "locale"
                },
                "PLATFORM": {
                    "key": "platform",
                    "transform": "get_platform_identifier"
                }
            },
            "update": {
                "APPLICATION": {
                    "key": "appName"
                },
                "BRANCH": {
                    "key": "tree"
                },
                "BUILD_ID": {
                    "key": "from_buildid"
                },
                "TARGET_BUILD_ID": {
                    "key": "to_buildid"
                },
                "TARGET_BUILD_REVISION": {
                    "key": "revision"
                }
            }
        },
        "by_branch": {
            "mozilla-central": {
                "testruns": [
                    "update",
                    "functional"
                ],
                "platforms": {
                    "linux": [
                        "linux && ubuntu && 32bit"
                    ],
                    "linux64": [
                        "linux && ubuntu && 64bit"
                    ],
                    "mac": [
                        "mac && 10.6 && 64bit",
                        "mac && 10.9 && 64bit",
                        "mac && 10.10 && 64bit"
                    ],
                    "win32": [
                        "windows && xp && 32bit",
                        "windows && 8.1 && 32bit",
                        "windows && 8.1 && 64bit"
                    ],
                    "win64": [
                        "windows && 8.1 && 64bit"
                    ]
                }
            },
            "mozilla-aurora": {
                "testruns": [
                    "update",
                    "functional"
                ],
                "platforms": {
                    "linux": [
                        "linux && ubuntu && 32bit"
                    ],
                    "linux64": [
                        "linux && ubuntu && 64bit"
                    ],
                    "mac": [
                        "mac && 10.6 && 64bit",
                        "mac && 10.9 && 64bit",
                        "mac && 10.10 && 64bit"
                    ],
                    "win32": [
                        "windows && xp && 32bit",
                        "windows && 8.1 && 32bit",
                        "windows && 8.1 && 64bit"
                    ],
                    "win64": [
                        "windows && 8.1 && 64bit"
                    ]
                }
            }
        }
    }
}
