<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Execute update tests for Nighly and Aurora builds.</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>BRANCH</name>
          <description>The branch of daily builds of Firefox to use.</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>PLATFORM</name>
          <description>The platform to run the test on.</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>LOCALE</name>
          <description>The locale of Firefox.</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.TextParameterDefinition>
          <name>BUILD_ID</name>
          <description>The build id of Firefox before the update</description>
          <defaultValue></defaultValue>
        </hudson.model.TextParameterDefinition>
        <hudson.model.TextParameterDefinition>
          <name>TARGET_BUILD_ID</name>
          <description>The expected build id of Firefox after the update</description>
          <defaultValue></defaultValue>
        </hudson.model.TextParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers class="vector"/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>../../../../mozmill-env/run.sh hg clone https://hg.mozilla.org/qa/mozmill-automation</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>../../../../mozmill-env/run.sh mozmill-automation/download.py --type=daily --branch=$BRANCH --platform=$PLATFORM --locale=$LOCALE --build-id=$BUILD_ID --directory=builds
</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>../../../../mozmill-env/run.sh mozmill-automation/testrun_update.py --target-buildid=$TARGET_BUILD_ID --no-fallback --report=http://mozmill-archive.brasstacks.mozilla.com/db/ builds/</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>rm -r *</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers>
    <hudson.plugins.ws__cleanup.PreBuildCleanup>
      <deleteDirs>false</deleteDirs>
    </hudson.plugins.ws__cleanup.PreBuildCleanup>
  </buildWrappers>
</project>